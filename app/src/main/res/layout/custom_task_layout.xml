<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/taskView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="TextView"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/responsibleView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/taskView"
        android:layout_alignStart="@+id/taskView"
        android:layout_below="@+id/taskView"
        android:text="Membro:  "
        android:textSize="11sp" />

    <TextView
        android:id="@+id/dataViewContent"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/taskView"
        android:layout_toEndOf="@+id/dataView"
        android:layout_toRightOf="@+id/dataView"
        android:text="TextView"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/responsibleViewContent"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/taskView"
        android:layout_toEndOf="@+id/responsibleView"
        android:layout_toRightOf="@+id/responsibleView"
        android:text="TextView"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/dataView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/taskView"
        android:layout_toEndOf="@+id/responsibleViewContent"
        android:layout_toRightOf="@+id/responsibleViewContent"
        android:text=" Data:  "
        android:textSize="11sp" />
</RelativeLayout>